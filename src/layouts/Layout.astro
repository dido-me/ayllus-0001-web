---
import '@fontsource-variable/onest'
import Footer from '@src/components/share/Footer.component.astro'
import Navbar from '@src/components/share/Navbar.component.astro'
import WhatsappFloatButton from '@src/components/share/WhatsappFloatButton.component.astro'

interface Props {
    title ?: string ;
}

const { title } = Astro.props as Props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Ayllus Peru {title && `| ${title}`}</title>
	</head>
	<body>
		<Navbar />
		<slot />
		<WhatsappFloatButton />
		<Footer />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		font-family: 'Onest Variable', sans-serif;
	}
</style>
