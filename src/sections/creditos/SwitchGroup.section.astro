---
import Icon from '@src/components/share/Icon.component.astro'
import TitlePage from '@src/components/share/TitlePage.component.astro'
import fetchApi from '@src/lib/strapi'
import type { CreditosGroupType } from '@src/types/creditos/groupCreditos'

const data = await fetchApi<CreditosGroupType[]>({
  endpoint: 'tipo-creditos',
  query: {
    populate: '*'
  },
  wrappedByKey: 'data'
})

const titlesForPage = {
  tituloNaranja: 'Descubre como nuestros',
  tituloNegro: 'Créditos para tu Negocios',
  tituloMorado: 'Pueden impulsar el éxito de tu emprendimiento'
};
---

<head>
  <link
    rel="stylesheet"
    href="https://unpkg.com/@themesberg/flowbite@1.2.0/dist/flowbite.min.css"
  />
</head>

<div class="border-b border-gray-200 dark:border-gray-700 mb-4">
  <ul
    class="flex flex-wrap justify-center -mb-px"
    id="myTab"
    data-tabs-toggle="#myTabContent"
    role="tablist"
  >
    {
      data.map((item, index) => (
        <li class="mr-2" role="presentation">
          <button
            class={`inline-block text-gray-500 hover:text-gray-600 hover:border-gray-300 rounded-t-lg py-4 px-4 text-sm font-medium text-center border-transparent border-b-2 dark:text-gray-400 dark:hover:text-gray-300 ${index === 0 ? 'active' : ''}`}
            id={`dashboard-${item.id}-tab`}
            data-tabs-target={`#dashboard-${item.id}`}
            type="button"
            role="tab"
            aria-controls={`dashboard-${item.id}`}
            aria-selected={index === 0 ? 'true' : 'false'}
          >
            {item.nombre}
          </button>
        </li>
      ))
    }
  </ul>
</div>
<div id="myTabContent">
  {
    data.map((main, index) => (
      <div
        class={`p-4 rounded-lg ${index === 0 ? '' : 'hidden'}`}
        id={`dashboard-${main.id}`}
        role="tabpanel"
        aria-labelledby={`dashboard-${main.id}-tab`}
      >
        <TitlePage {...titlesForPage} />

        <ul class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 w-full">
          {main.creditos.map((item) => (
            <li>
              <a
                href={`/creditos/${item.slug}`}
                rel="noopener noreferrer"
                class="flex flex-col gap-3 text-ayllus-primary shadow-md rounded-lg px-5 py-4 bg-slate-100 hover:bg-ayllus-primary hover:text-white group h-full"
                aria-label={`Ver detalles de ${item.nombre_credito}`}
              >
                <div class="flex items-center justify-center w-12 h-12 rounded-full bg-white/60 group-hover:bg-white/20 transition-colors duration-300">
                  <Icon
                    className="w-8 h-8"
                    name={'fluent:credit-card-person-24-filled'}
                  />
                </div>

                <h2 class="font-medium text-lg">{item.nombre_credito}</h2>

                {item.descripcion && (
                  <div class="flex flex-col flex-grow">
                    <p
                      class="text-sm opacity-90 group-hover:text-white/90 line-clamp-3 mb-2"
                      title={
                        item.descripcion.length > 130
                          ? item.descripcion
                          : undefined
                      }
                    >
                      {item.descripcion.length > 130
                        ? `${item.descripcion.substring(0, 130)}...`
                        : item.descripcion}
                    </p>
                    <span class="text-sm font-medium mt-auto underline underline-offset-2 group-hover:text-white">
                      Ver más
                    </span>
                  </div>
                )}
              </a>
            </li>
          ))}
        </ul>
      </div>
    ))
  }
</div>

<script
  src="https://unpkg.com/@themesberg/flowbite@1.2.0/dist/flowbite.bundle.js"
></script>

<style>
  .active {
    color: #7406a7 !important;
    border-color: #7406a7 !important;
  }
</style>
