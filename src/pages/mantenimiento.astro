<style>
	.maintenance-container {
		width: 100%;
		max-width: 500px;
		padding: 2rem;
	}

	.maintenance-card {
		background: rgba(255, 255, 255, 0.98);
		backdrop-filter: blur(10px);
		border-radius: 20px;
		padding: 2.5rem 2rem;
		text-align: center;
		box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
		border: 1px solid rgba(255, 255, 255, 0.5);
	}

	.logo-container {
		margin-bottom: 2rem;
	}

	.main-logo {
		height: 70px;
		width: auto;
		object-fit: contain;
	}

	.title {
		font-size: 2.2rem;
		font-weight: 700;
		margin-bottom: 0.8rem;
		color: #0E0D35;
		line-height: 1.2;
	}

	.subtitle {
		font-size: 1.1rem;
		color: #6b7280;
		margin-bottom: 1.5rem;
		font-weight: 500;
	}

	.message {
		margin-bottom: 2rem;
		line-height: 1.6;
	}

	.message p {
		margin: 0;
		color: #4b5563;
		font-size: 1rem;
	}

	.social-section {
		margin-bottom: 2rem;
	}

	.social-section h3 {
		margin: 0 0 1.5rem 0;
		color: #0E0D35;
		font-size: 1.1rem;
		font-weight: 600;
	}

	.social-links {
		display: flex;
		flex-direction: column;
		gap: 1rem;
		margin-bottom: 1.5rem;
	}

	.social-link {
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 0.8rem;
		padding: 0.8rem 1.5rem;
		border-radius: 12px;
		text-decoration: none;
		font-weight: 600;
		font-size: 0.95rem;
		transition: all 0.3s ease;
		border: 2px solid transparent;
	}

	.social-icon {
		width: 20px;
		height: 20px;
	}

	.facebook {
		background: #1877f2;
		color: white;
	}

	.facebook:hover {
		background: #166fe5;
		transform: translateY(-2px);
		box-shadow: 0 5px 15px rgba(24, 119, 242, 0.3);
	}

	.instagram {
		background: linear-gradient(45deg, #f09433 0%, #e6683c 25%, #dc2743 50%, #cc2366 75%, #bc1888 100%);
		color: white;
	}

	.instagram:hover {
		transform: translateY(-2px);
		box-shadow: 0 5px 15px rgba(225, 48, 108, 0.3);
	}

	.whatsapp {
		background: #25d366;
		color: white;
	}

	.whatsapp:hover {
		background: #22c55e;
		transform: translateY(-2px);
		box-shadow: 0 5px 15px rgba(37, 211, 102, 0.3);
	}

	.isotipo-container {
		margin: 1.5rem 0 1rem 0;
	}

	.isotipo {
		height: 40px;
		width: auto;
		object-fit: contain;
		opacity: 0.7;
	}

	.eta {
		color: #6b7280;
		font-size: 0.9rem;
		margin: 0;
		font-style: italic;
	}

	/* Responsive */
	@media (max-width: 768px) {
		.maintenance-container {
			padding: 1rem;
		}

		.maintenance-card {
			padding: 2rem 1.5rem;
		}

		.title {
			font-size: 1.8rem;
		}

		.subtitle {
			font-size: 1rem;
		}

		.main-logo {
			height: 60px;
		}

		.social-links {
			gap: 0.8rem;
		}

		.social-link {
			padding: 0.7rem 1.2rem;
			font-size: 0.9rem;
		}

		.social-icon {
			width: 18px;
			height: 18px;
		}
	}

	@media (max-width: 480px) {
		.social-link {
			font-size: 0.85rem;
			padding: 0.6rem 1rem;
		}
	}
</style>
