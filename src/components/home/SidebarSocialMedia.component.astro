---
import Icon from '@src/components/share/Icon.component.astro'

const PHONE_NUMBER = import.meta.env.PHONE_NUMBER || '966003622'
---

<aside
  class="absolute top-1/2 right-0 -translate-y-1/2 bg-ayllus-primary/35 z-50 rounded-l-lg"
>
  <ul class="flex flex-col gap-4 py-4 px-2 text-white">
    <li>
      <a
        href="https://www.facebook.com/coorayllusperu"
        target="_blank"
        rel="noopener noreferrer"
      >
        <Icon name="facebook" className="w-8 h-8" />
      </a>
    </li>
    <li>
      <a
        href="https://www.instagram.com/cooperativa.ayllus.peru/"
        target="_blank"
        rel="noopener noreferrer"
      >
        <Icon name="instagram" className="w-8 h-8" />
      </a>
    </li>
    <li>
      <a
        href=`https://wa.me/51${PHONE_NUMBER}?text=Quiero%20m%C3%A1s%20informaci%C3%B3n%20de%20la%20cooperativa`
        target="_blank"
        rel="noopener noreferrer"
      >
        <Icon name="whatsapp" className="w-8 h-8" /></a
      >
    </li>
  </ul>
</aside>
