---
import Icon from '@src/components/share/Icon.component.astro'

interface Props {
  urlImage: string;
  nombreLocation: string;
  linkMaps: string;
  direccion: string;
}

const { urlImage, nombreLocation, linkMaps, direccion } = Astro.props as Props;
---

<div class="relative w-full sm:w-auto rounded-3xl overflow-hidden z-10 shadow-lg">
  <img
    id="background-card-ayacucho"
    src={urlImage}
    alt="background-card-ayacucho"
    class="w-full h-auto object-cover"
    fetchpriority="low"
  />

  <div class="absolute inset-0 bg-black bg-opacity-35 z-10"></div>

  <div
    class="absolute inset-0 flex flex-col items-center justify-center gap-10 z-20"
  >
    <div class="flex flex-col gap-4 items-center justify-center">
      <h1 class="text-white text-4xl font-bold">
        {nombreLocation}
      </h1>
      <p class="flex gap-2 text-white font-medium text-xl text-center px-8">
        <Icon name="location" className="text-ayllus-secondary" />
        {direccion}
      </p>
    </div>
    <a
      href={linkMaps}
      target="_blank"
      rel="noopener noreferrer"
      class="inline-flex justify-center items-center gap-2 bg-ayllus-secondary text-white py-4 px-6 rounded-2xl hover:bg-ayllus-secondary text-lg font-bold"
    >
      Ir a Maps
      <Icon name="arrow-right" />
    </a>
  </div>
</div>
