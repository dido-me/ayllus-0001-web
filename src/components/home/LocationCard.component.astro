---
import Icon from '@src/components/share/Icon.component.astro'

interface Props {
  urlImage: string;
  nombreLocation: string;
  linkMaps: string;
  direccion: string;
}

const { urlImage, nombreLocation, linkMaps, direccion } = Astro.props as Props;
---

<div
  class="relative w-full max-w-[400px] sm:max-w-[500px] md:max-w-[600px] lg:max-w-[700px] xl:max-w-[800px] rounded-3xl overflow-hidden z-10 shadow-lg"
>
  <div
    class="relative w-full h-[250px] sm:h-[300px] md:h-[350px] lg:h-[400px] overflow-hidden"
  >
    <img
      id="background-card-ayacucho"
      src={urlImage}
      alt="background-card-ayacucho"
      class="absolute inset-0 w-full h-full object-cover"
      fetchpriority="low"
    />
    <div class="absolute inset-0 bg-black bg-opacity-40"></div>
  </div>

  <div
    class="absolute inset-0 flex flex-col items-center justify-end pb-8 px-4 sm:px-6 md:px-8 lg:px-10 z-20 text-center"
  >
    <h1
      class="text-white text-xl sm:text-2xl md:text-3xl lg:text-4xl font-bold mb-3 drop-shadow-lg"
    >
      {nombreLocation}
    </h1>
    <div class="flex flex-col items-center max-w-[90%] md:max-w-[80%]">
      <p
        class="flex flex-wrap justify-center items-center gap-2 text-white font-medium text-sm sm:text-base md:text-lg lg:text-xl text-center leading-tight min-h-[3.5rem] sm:min-h-[4rem]"
      >
        <Icon
          name="location"
          className="text-ayllus-secondary w-5 h-5 sm:w-6 sm:h-6 md:w-7 md:h-7"
        />
        <span class="block w-full text-center break-words">{direccion}</span>
      </p>
    </div>
    <a
      href={linkMaps}
      target="_blank"
      rel="noopener noreferrer"
      class="mt-4 inline-flex justify-center items-center gap-2 bg-ayllus-secondary text-white py-2 px-4 sm:py-3 sm:px-5 md:py-4 md:px-6 rounded-xl hover:bg-ayllus-secondary-dark text-sm sm:text-base md:text-lg font-bold"
    >
      Ir a Maps
      <Icon
        name="arrow-right"
        className="w-4 h-4 sm:w-5 sm:h-5 md:w-6 md:h-6"
      />
    </a>
  </div>
</div>
