---
interface Props {
  titulo: string;
  listaRequisitos: string[];
  urlImage: string;
}

const { titulo, listaRequisitos, urlImage } = Astro.props as Props;
---

<div
  class="container mx-auto bg-white rounded-lg p-4 my-20 flex flex-col md:flex-row items-center md:items-start space-y-4 md:space-y-0 md:space-x-6"
>
  <img
    src={urlImage}
    alt={titulo}
    class="w-full md:w-1/3 h-auto object-cover rounded-lg"
  />
  <div class="w-full md:w-2/3">
    <h2
      class="text-xl font-extrabold text-ayllus-primary border-b-2 border-ayllus-primary pb-1"
    >
      &nbsp; &nbsp;{titulo}
    </h2>
    <ul
      class="mt-3 pl-4 font-semibold text-ayllus-title list-disc list-inside space-y-2"
    >
      {listaRequisitos.map((requisito) => <li>{requisito}</li>)}
    </ul>
  </div>
</div>
