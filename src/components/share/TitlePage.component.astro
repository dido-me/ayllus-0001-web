---
interface Props {
  tituloNaranja?: string;
  tituloNegro: string;
  tituloMorado: string;
}

const { tituloNaranja, tituloNegro, tituloMorado } = Astro.props as Props;
---

<section
  class="container mx-auto flex flex-col items-center justify-center py-8 sm:py-12 text-center px-4"
>
  {
    tituloNaranja && (
      <h4 class="text-xs sm:text-sm font-semibold text-ayllus-secondary">
        {tituloNaranja}
      </h4>
    )
  }
  <h2 class="text-2xl sm:text-3xl md:text-4xl font-extrabold w-full max-w-4xl">
    {tituloNegro}
  </h2>
  <h3 class="text-sm sm:text-base max-w-lg font-semibold text-ayllus-primary">
    {tituloMorado}
  </h3>
</section>
